@page
@model IndexModel
@{
    ViewData["Title"] = "Characters info";
    Layout = null;
}
<link href="~/dist/fullpage.css" rel="stylesheet" />
<link href="~/dist/fullpage.min.css.map" rel="stylesheet">
<link href="~/comic_neue/comicfont.css" rel="stylesheet" />
<style>
    body {
        background-image: url('Images/gerry.png');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }

</style>


<html>
<body>

    <div id="fullpage">
        <div class="section" id="section1">

            @foreach(var character in Model.Characters)
            {
                <div class="slide ">
                    
                    <div class="name">    
                    
                        <h1 class="comic">@character.Name</h1>
                    </div>
                    <div class="specie">

                        <h2 class="comic">@character.Species</h2>
                    </div>


                    <div class="episodies">
                        <ul>
                            @foreach(var epi in character.Episode)
                            {
                                <li class="comic">@epi</li>
                            }

                        </ul>

                        
                    </div>

                    <div class="status">
                        <h3 class="comic">Status: @character.Status </h3>
                        <h3 class="comic">Gener: @character.Gender </h3>
                        <h3 class="comic">Type: @character.Type </h3>
                    </div>

                    <div class="avatar">
                        <img src="@character.Image"/>

                    </div>


                    <div class="origin">
                        <h3 class="comic">Origin: @character.Location.Name </h3>
                        <h3 class="comic">Type: @character.Location.Type</h3>
                        <h3 class="comic">Dimension: @character.Location.Dimension </h3>
                        <h3 class="comic">Residents: @character.Location.Residents.Count() </h3>

                    </div>



                </div>
            }

            
 
        </div>

    </div>


    <script type="text/javascript" src="~/dist/fullpage.js"></script>
    <script type="text/javascript">
        var myFullpage = new fullpage('#fullpage', {
            //sectionsColor: ['#f2f2f2', '#4BBFC3', '#7BAABE', 'whitesmoke', '#ccddff']
        });
    </script>
</body>
</html>

